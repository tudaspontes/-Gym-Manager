{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section
        class="avatar"
        style="background: url({{ member.avatar_url }}) no-repeat center center / cover; border-radius: 0 4px;"></section>
        <section class="details">

            <h3>Details</h3>
            
            <div class="item">
                <div>Member</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Birthday</div>
                <div>{{ member.birth }}</div>
            </div>
            
            <div class="item">
                <div>Email</div>
                <div>{{member.email }}</div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Blood</div>
                <div>{{ member.blood }}</div>
            </div>

            <div class="item">
                <div>Height (kg) </div>
                <div>{{ member.height }}</div>
            </div>

            <div class="item">
                <div>Weight (cm) </div>
                <div>{{ member.weight }}</div>
            </div>

            <a href="/members/{{member.id }}/edit" class="button">Edit</a>

        </section>
    

    </div>

{% endblock content %}